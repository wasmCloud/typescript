{
  "packageManager": "yarn@4.7.0+sha512.5a0afa1d4c1d844b3447ee3319633797bcd6385d9a44be07993ae52ff4facabccafb4af5dcd1c2f9a94ac113e5e9ff56f6130431905884414229e284e37bb7c9",
  "name": "@wasmcloud/monorepo",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "root:format": "prettier --ignore-unknown --no-error-on-unmatched-pattern '**/*' --check",
    "root:format:fix": "prettier --ignore-unknown --no-error-on-unmatched-pattern '**/*' --write",
    "changeset": "changeset",
    "ci:version": "changeset version && yarn ci:update-lockfile",
    "ci:update-lockfile": "yarn install --mode=update-lockfile",
    "ci:publish": "turbo run prepare-release && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.7.0",
    "@wasmcloud/prettier-config": "workspace:*",
    "eslint": "^9.26.0",
    "eslint-config-turbo": "^2.5.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "cross-spawn": "^7.0.5"
  }
}
