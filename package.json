{
  "name": "@wasmcloud/monorepo",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:unit": "turbo run test:unit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "root:format": "prettier --ignore-unknown --no-error-on-unmatched-pattern '**/*' --check",
    "root:format:fix": "prettier --ignore-unknown --no-error-on-unmatched-pattern '**/*' --write",
    "changeset": "changeset",
    "ci:version": "changeset version && yarn ci:update-lockfile",
    "ci:update-lockfile": "yarn install --mode=update-lockfile",
    "ci:publish": "turbo run prepare-release && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.9.2",
    "@wasmcloud/prettier-config": "workspace:*",
    "eslint": "^9.38.0",
    "eslint-config-turbo": "^2.5.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "cross-spawn": "^7.0.5"
  },
  "prettier": "@wasmcloud/prettier-config",
  "packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
