{
  "name": "http-hello-world",
  "version": "0.1.0",
  "description": "A WebAssembly Component that responds to HTTP requests using the `wasi:http` WIT interface",
  "main": "dist/http-hello-world.js",
  "scripts": {
    "generate:types": "rimraf generated/types && jco types wit/ -o generated/types",
    "build:tsc": "tsc",
    "build:bundle": "rslib build",
    "build:js": "jco componentize -w wit -o dist/http-bundling.wasm dist/esm/http-bundling.mjs",
    "build:component": "wash build --sign-only --config-path wasmcloud.toml",
    "build": "npm run generate:types && npm run build:tsc && npm run build:bundle && npm run build:js && npm run build:component",
    "install-and-build": "npm install && npm run build",
    "component:start": "wash start component file://build/http_bundling_s.wasm --auction-timeout-ms 10000 --timeout-ms 10000 typescript-http-bundling",
    "component:stop": "wash stop component typescript-http-bundling",
    "wadm:start": "wash app deploy local.wadm.yaml",
    "wadm:stop": "wash app delete typescript-http-bundling v0.0.1",
    "start": "npm run build && npm run wadm:start",
    "reload": "npm run build && npm run wadm:stop && npm run wadm:start",
    "stop": "npm run wadm:stop",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@bytecodealliance/jco": "^1.10.2",
    "@rsbuild/plugin-node-polyfill": "^1.3.0",
    "@rslib/core": "^0.6.1",
    "@types/jsonpath": "^0.2.4",
    "@types/node": "^22.7.6",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "csvtojson": "^2.0.10",
    "jsonpath": "^1.1.1",
    "remeda": "^2.21.0"
  }
}
