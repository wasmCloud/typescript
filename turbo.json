{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "format": {
      "dependsOn": ["^format", "//#root:format"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix", "//#root:format:fix"]
    },
    "//#root:format": {},
    "//#root:format:fix": {},
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report", "test-results"],
      "env": ["WASH_VERSION"]
    },
    "test:unit": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["test:unit", "test:e2e"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "prepare-release": {
      "outputs": ["package.tgz"],
      "dependsOn": ["^prepare-release"]
    },
    "dev": {
      "dependsOn": ["build", "^build"],
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    }
  }
}
