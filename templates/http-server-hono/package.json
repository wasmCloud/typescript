{
  "name": "http-server-hono",
  "version": "0.1.0",
  "description": "A WebAssembly component HTTP server powered by Hono using the wasi:http WIT interface",
  "private": true,
  "main": "dist/guest/component.js",
  "type": "module",
  "scripts": {
    "generate:types": "jco types wit -o generated/types",
    "build:ts": "rolldown -c rolldown.config.mjs",
    "build:component": "jco componentize -w wit -o dist/http_server_hono.wasm dist/guest/component.js",
    "build": "npm run generate:types && npm run build:ts && npm run build:component",
    "install-and-build": "npm install && npm run build",
    "serve": "jco serve dist/http_server_hono.wasm"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@bytecodealliance/jco-std": "^0.1.0",
    "hono": "^4.10.4"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.15.4",
    "rolldown": "^1.0.0-beta.47",
    "typescript": "^5.9.3"
  }
}
