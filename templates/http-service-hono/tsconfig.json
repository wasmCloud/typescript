{
  "compilerOptions": {
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "types": [
      "./generated/types/wit.d.ts"
    ],
    "allowJs": false,
    // Type-check only; rolldown handles compilation
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
